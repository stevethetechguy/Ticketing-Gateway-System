<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html>
<head>
    <title>Manager Approvals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-light">
<%@ include file="navbar.jsp" %>

<div class="container mt-5">
    <h2 class="mb-4">Pending Ticket Approvals</h2>
    
    <div class="table-responsive bg-white shadow-sm p-3 rounded">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach items="${pendingTickets}" var="ticket">
                    <tr id="row-${ticket.id}">
                        <td>${ticket.id}</td>
                        <td>${ticket.createdBy}</td>
                        <td>${ticket.title}</td>
                        <td><span class="badge bg-info">${ticket.category}</span></td>
                        <td>${ticket.priority}</td>
                        <td>
                            <button class="btn btn-success btn-sm" onclick="processApproval(${ticket.id}, 'APPROVED')">
                                <i class="bi bi-check-lg"></i> Approve
                            </button>
                            <button class="btn btn-danger btn-sm" onclick="showRejectModal(${ticket.id})">
                                <i class="bi bi-x-lg"></i> Reject
                            </button>
                        </td>
                    </tr>
                </c:forEach>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Ticket</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="rejectTicketId">
                <label class="form-label">Reason for Rejection</label>
                <textarea id="rejectionReason" class="form-control" rows="3"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="submitRejection()">Confirm Reject</button>
            </div>
        </div>
    </div>
</div>

<script>
function processApproval(ticketId, status) {
    $.ajax({
        url: "${pageContext.request.contextPath}/api/tickets/updateStatus",
        type: "POST",
        data: { id: ticketId, status: status },
        success: function(response) {
            alert("Ticket " + status);
            $("#row-" + ticketId).fadeOut();
        },
        error: function() { alert("Failed to update ticket."); }
    });
}

function showRejectModal(id) {
    $("#rejectTicketId").val(id);
    $("#rejectModal").modal('show');
}

function submitRejection() {
    let id = $("#rejectTicketId").val();
    let reason = $("#rejectionReason").val();
    
    $.ajax({
        url: "${pageContext.request.contextPath}/api/tickets/updateStatus",
        type: "POST",
        data: { id: id, status: 'REJECTED', reason: reason },
        success: function(response) {
            $("#rejectModal").modal('hide');
            $("#row-" + id).fadeOut();
        }
    });
}
</script>
</body>
</html>