            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmBtn" class="btn" onclick="submitDecision()">Confirm</button>
            </div>
        </div>
