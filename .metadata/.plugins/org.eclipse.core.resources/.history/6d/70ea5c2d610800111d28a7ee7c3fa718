package com.synergisticit.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.synergisticit.model.TicketHistory;
import com.synergisticit.service.TicketHistoryService;

@RestController
@RequestMapping("/ticketHistory")
public class TicketHistoryController {
	
	@Autowired
	TicketHistoryService ticketHistoryService;
	
	@GetMapping("/{ticketId}")
    public ResponseEntity<List<TicketHistory>> getTicketHistoryByTicketId(
            @PathVariable Long ticketId) {

		System.out.println("INSSIDE");
        List<TicketHistory> historyList =
                ticketHistoryService.getTicketHistoryByTicketId(ticketId);
		System.out.println("INSSIDE1");

        return ResponseEntity.ok(historyList);
    }
}
