package com.synergisticit.scheduler;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.scheduling.annotation.Scheduled;
import org.springframework.stereotype.Service;

import com.synergisticit.domain.Ticket;
import com.synergisticit.service.TicketPublisher;
import com.synergisticit.service.TicketService;


@Service
public class Scheduler {
	
	@Autowired
	TicketService ticketService;
	@Autowired
	TicketPublisher ticketPublisher;

    @Scheduled(cron = "0 0 9 * * ?")
    //@Scheduled(cron = "0 */1 * * * ?")

    public void checkPendingTickets() {

        System.out.println("Checking pending tickets...");
        List<Ticket> list = ticketService.getPendingTicketsOlderThan7Days();
        
        for(Ticket ticket : list) {
        	System.out.println(ticket.getId());
            ticketPublisher.sendTicketPendingfor7Days(ticket);

        }
        
        
        // Call Ticket Service REST API
        // Get tickets older than 7 days
        // Then send reminder email
        /*
        emailService.sendSimpleEmail(
                "manager@email.com",
                "Pending Tickets Reminder",
                "There are tickets pending > 7 days."
        );
        */
    }
}
