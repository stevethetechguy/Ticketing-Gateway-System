package com.synergisticit.service;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.core.ParameterizedTypeReference;
import org.springframework.http.HttpMethod;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.client.RestTemplate;

import com.synergisticit.model.Ticket;
import com.synergisticit.model.TicketHistory;

@Service
public class TicketHistoryService {
	@Autowired
	private RestTemplate restTemplate;

    @Value("${ticket.service.url}") 
    private String ticketServiceUrl;

    public TicketHistory createTicketHistory(TicketHistory ticketHistory) {
    	String url = ticketServiceUrl + "/api/ticketHistory";
        
        return restTemplate.postForEntity(url, ticketHistory, TicketHistory.class).getBody();
       
    	
    	
    }
    public List<TicketHistory> getTicketHistoryByTicketId(Long ticketId) {
    	 String url = ticketServiceUrl + "/api/ticketHistory/" + ticketId;

    	    ResponseEntity<TicketHistory[]> response =
    	            restTemplate.getForEntity(url, TicketHistory[].class);

    	    TicketHistory[] histories = response.getBody();
    	    return histories != null ? Arrays.asList(histories) : new ArrayList<>();
    }
}
