    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body class="bg-light">

<%@ include file="navbar.jsp" %>

<div class="container mt-5">
    <h2 class="mb-4">Pending Ticket Assignments</h2>

    <div class="table-responsive bg-white shadow-sm p-3 rounded">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Assign</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach items="${assignedTickets}" var="ticket">
                    <tr id="row-${ticket.id}">
                        <td>${ticket.id}</td>
                        <td>${ticket.title}</td>
                        <td>${ticket.description}</td>
                        <td>
                            <span class="badge bg-info">${ticket.category}</span>
                        </td>
                        <td>${ticket.priority}</td>
                        <td>
                            <button class="btn btn-primary btn-sm"
                                    onclick="openAssignModal(${ticket.id})">
                                Assign
                            </button>
                        </td>
                    </tr>
                </c:forEach>
            </tbody>
        </table>
    </div>
</div>

<!-- ASSIGN MODAL -->
<div class="modal" id="assignModal" style="background: rgba(0,0,0,0.5);">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Assign Ticket</h5>
                <button type="button" class="btn-close" onclick="closeAssignModal()"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="assignTicketId">

                <div class="mb-3">
                    <label class="form-label">Assign to IT Employee</label>
                    <select id="assignedEmployeeId" class="form-select">
                        <option value="">-- Select Employee --</option>
                        <c:forEach items="${itEmployees}" var="emp">
                            <option value="${emp.id}">
                                ${emp.email}
                            </option>
                        </c:forEach>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Assignment Comment</label>
                    <textarea id="assignComment"
                              class="form-control"
                              rows="3"
                              placeholder="Optional comment..."></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeAssignModal()">Cancel</button>
                <button class="btn btn-primary" onclick="submitAssignment()">Assign</button>
            </div>

        </div>
    </div>
</div>

<script>
function openAssignModal(ticketId) {
    $("#assignTicketId").val(ticketId);
    $("#assignedEmployeeId").val("");
    $("#assignComment").val("");
    $("#assignModal").show();
}

function closeAssignModal() {
    $("#assignModal").hide();
}

function submitAssignment() {

    if ($("#assignedEmployeeId").val() === "") {
        alert("Please select an IT employee.");
        return;
    }

    var formData = new FormData();
    formData.append("id", $("#assignTicketId").val());
    formData.append("employeeId", $("#assignedEmployeeId").val());
    formData.append("comment", $("#assignComment").val());
	console.log("TESTING " + $("#assignTicketId").val())
    $.ajax({
        url: "${pageContext.request.contextPath}/assignTicket",
        type: "PUT",
        data: formData,
        processData: false,
        contentType: false,
        success: function () {
            alert("Ticket assigned successfully");
            window.location.reload();
        },
        error: function (xhr) {
            alert("Error: " + xhr.responseText);
        }
    });
}
</script>

</body>
</html>
